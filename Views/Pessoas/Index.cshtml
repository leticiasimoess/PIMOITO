@model IEnumerable<PIMOITO.Models.Pessoa>

@{
    ViewData["Title"] = "Index";
}
<br/>
<p>
    <a asp-action="Create" class="btn btn-default">Cadasdrar novo Agendamento</a>
</p>
<br />
<h1 class="display-4">Listagem de Agendamento</h1>
<br />
<br />
<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th >
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.Telefones)
            </th>
            <th ></th>            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td >
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td >
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td>
                <td >
                    @Html.DisplayFor(modelItem => item.Endereco)
                </td>
                <td >
                    @Html.DisplayFor(modelItem => item.Telefones)
                </td>
                <td >
                    <a role="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a role="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
